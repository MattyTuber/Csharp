        <TextBlock HorizontalAlignment="Left" Margin="1525,193,0,0" Text="Secondo Valore" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <Button x:ConnectionId='4' x:Name="Somma" Content="+" Margin="860,685,0,0" VerticalAlignment="Top"                       />
        <Button x:ConnectionId='5' x:Name="Moltiplicazione" Content="x" Margin="1000,685,0,0" VerticalAlignment="Top"                       />
        <Button x:ConnectionId='6' x:Name="Sottrazione" Content="-" Margin="895,685,0,0" VerticalAlignment="Top"                       />
        <Button x:ConnectionId='7' x:Name="Divisione" Content="/" Margin="1032,685,0,0" VerticalAlignment="Top"                       />
        <Button x:ConnectionId='8' x:Name="Potenza" Content="Potenza" Margin="0,685,0,0" VerticalAlignment="Top"                      HorizontalAlignment="Center"/>
        <TextBox x:ConnectionId='9' x:Name="Soluzione" HorizontalAlignment="Center" Text="" TextWrapping="Wrap" VerticalAlignment="Center" Height="39" Width="335"                                    />

    </Grid>
</Page>

